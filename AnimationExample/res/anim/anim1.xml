<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <alpha
        android:duration="5000"
        android:fromAlpha="0"
        android:toAlpha="1" />

    <translate
        android:duration="5000"
        android:fromXDelta="-100%p"
        android:toXDelta="0" />

    <rotate
        android:duration="5000"
        android:fromDegrees="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="360" />
    
    <scale android:fromXScale="0" android:toXScale="1" android:duration="5000"/>

</set>